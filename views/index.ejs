<body class="body">
  <main style="margin: 1em;">
    
    <div class="welcomebar">
      <h1>Welcome to the weather information app!</h1>
       <form action="/submit" method="post">
        <h1></h1><input class="textarea" type="text" name="location" placeholder="Please enter your location here"></h1>
        <br>
        <br>
        <button class="submitbutton" type="submit" >Submit</button>
      </form>
    </div>
    <br>
 
       
        </div>
        <% if (typeof data1 !== 'undefined') { %>
          <div class="allinfo">
          <div class="weatherdetails">
            <h1>Weather for <%= data1.name %></h1>
            <p>Your Location's Temperature: <%= ((data1.main.temp - 273.15) * 1.8 + 32).toFixed(2) %>Â°F</p>
            <p>Your Location's Humidity: <%= data1.main.humidity %>%</p>
            <p>Your Location's Current Weather: <%= data1.weather[0].description %></p>
          </div>
          <% } %>
          <% if (typeof data2 !== 'undefined' && data2.length > 0) { %>
          <div class="coorddetails">
            <h1> GPS Coordinates for <%= data1.name %></h1>
            <p>Your Location's Longitude: <%= data2[0].lon %></p>
            <p>Your Location's Latitude: <%= data2[0].lat %></p>
          </div>
          </div>
        <% } %>
       
          
</div>
      
      
    </main>
